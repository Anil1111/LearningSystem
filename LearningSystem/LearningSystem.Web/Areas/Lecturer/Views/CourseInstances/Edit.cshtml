@model EditCourseInstanceBindingModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit instance @Model.Name</h2>
<form asp-area="Lecturer" asp-controller="CourseInstances" asp-action="Edit" asp-route-id="@Model.Id">
    @Html.EditorForModel()
    <div class="form-group row">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Edit" class="btn btn-success" />
        </div>
    </div>
</form>
<div class="text-center">
    <a asp-area="Lecturer" 
       asp-controller="Lectures"
       asp-action="Add"
       asp-route-id="@Model.Id"
       class="btn btn-success">Add new lecture</a>
</div>