@using LearningSystem.ViewModels.Admin
@model IEnumerable<AllUsersViewModel>

@{
    ViewData["Title"] = "All Users";
}

<main>
    <h1 class="title-center">@ViewData["Title"]</h1>
    <div class="container">
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Lecturer?</th>
                    <th>Admin?</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    @Html.DisplayForModel()
                </tbody>
            </table>
        </div>
    </div>
</main>