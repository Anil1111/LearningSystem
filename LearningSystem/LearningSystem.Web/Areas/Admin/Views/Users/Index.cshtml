@using LearningSystem.Web.Areas.Admin.Models.ViewModels
@model IEnumerable<AllUsersViewModel>

@{
    ViewData["Title"] = "All Users";
    var index = 0;
}

<main>
    <h1 class="title-center">@ViewData["Title"]</h1>
    <div class="container">
        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        var warningStyle = index % 2 != 0 ? "table-warning" : string.Empty;

                        <tr class="@warningStyle">
                            <th scope="row">@index</th>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>
                                <a asp-area="Admin" 
                                   asp-controller="Users" 
                                   asp-action="Details" 
                                   asp-route-id="@user.Id">Details</a>
                            </td>
                        </tr>

                        index++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>